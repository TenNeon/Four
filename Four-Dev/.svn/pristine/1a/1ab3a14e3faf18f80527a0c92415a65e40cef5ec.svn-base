using UnityEngine;
using System.Collections;

public class PauseHandler : MonoBehaviour {

	// Use this for initialization
	void Start () {
	
	}
	
	// Update is called once per frame
	void Update () {
	
	}

	public void OnPause()
	{
		Time.timeScale = 0;
	}

	public void OnResume()
	{
		Time.timeScale = 1;
	}
}
